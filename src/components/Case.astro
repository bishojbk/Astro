---
import Container from "./Container.astro"
import Topic from "./Topic.astro"

const caseStudies = await import("./Data/case-studies.json")
---
<Container>
    <div class="relative flex flex-col items-center md:flex-row" id="projects">
        <Topic title="Case Studies" description="Dont believe us? Dive into our compelling case studies and witness the power of our expertise." />
    </div>

    <div class="w-full p-12 bg-zinc-900 rounded-[45px] justify-start items-start gap-16 inline-flex text-white">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-x-2 gap-y-6 divide-x-0 md:divide-x divide-y md:divide-y-0">
            {caseStudies.default.map((study) => (
                <div class="flex-col items-start gap-5 inline-flex px-2 md:px-6 py-6 md:py-2">
                    <div class="w-full text-lg font-normal">{study.description}</div>
                </div>
            ))}
        </div>
    </div>
</Container>

